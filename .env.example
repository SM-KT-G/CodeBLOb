# FastAPI RAG Backend Environment Variables

# OpenAI API Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4-turbo
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# Database Configuration
DATABASE_URL=postgresql://your_user:your_password@localhost:5432/tourism_db
PGVECTOR_COLLECTION_NAME=tourism_embeddings

# Redis Configuration (Optional - for caching)
REDIS_URL=redis://localhost:6379/0
REDIS_TTL=300

# Application Settings
APP_ENV=development
LOG_LEVEL=INFO
MAX_WORKERS=2
REQUEST_TIMEOUT=15
MAX_CONCURRENT_REQUESTS=20

# API Constraints
MAX_REQUEST_BODY_SIZE=10240  # 10KB
MAX_RESPONSE_TIME=3  # seconds
